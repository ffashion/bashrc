[client]    
port = 3306
socket = /var/lib/mysql/mysql.sock  #rpm: /var/lib/mysql/ and defaults is /tmp/mysql.sock

[mysqld]
user = root
port = 3306    
socket = /var/lib/mysql/mysql.sock
skip-external-locking 
max_allowed_packet = 4M
table_open_cache = 128
sort_buffer_size = 8M
read_buffer_size = 2M
myisam_sort_buffer_size = 8M
thread_cache_size = 8
query_cache_size = 8M
#thread_concurrency = 8  # 线程并发量,太多也没有意义,反而增加切换的资源消耗,一般是填写cpu数值的2倍
datadir = /mydata/data/



pid-file = /mydata/data/fuser.pid
#pid-file = /var/run/mysqld/mysqld.pid
log_error = /var/log//mysql/mysql-error.log #错误日志路径
log-bin = /mydat/data/mysql-bin
slow_query_log_file = /var/log/mysql/mysql-slow.log





basedir = /usr/local/mysql
bind-address = 0.0.0.0
server-id = 1 
skip-name-resolve
#skip-networking
back_log = 600
max_connections = 1000
max_connect_errors = 6000
open_files_limit = 65535
binlog_cache_size = 1M
max_heap_table_size = 8M
tmp_table_size = 16M
read_rnd_buffer_size = 8M
join_buffer_size = 8M
query_cache_limit = 2M
key_buffer_size = 4M
ft_min_word_len = 4
transaction_isolation = REPEATABLE-READ
log_bin = mysql-bin
binlog_format = mixed
expire_logs_days = 30 
slow_query_log = 1
long_query_time = 1 
performance_schema = 0
explicit_defaults_for_timestamp
#lower_case_table_names = 1 #不区分大小写
default-storage-engine = InnoDB 
innodb_file_per_table = 1
innodb_open_files = 500
innodb_buffer_pool_size = 64M
innodb_read_io_threads = 4
innodb_thread_concurrency = 0
innodb_purge_threads = 1
innodb_flush_log_at_trx_commit = 2
innodb_log_buffer_size = 2M
innodb_log_file_size = 32M
innodb_log_files_in_group = 3
innodb_max_dirty_pages_pct = 90
innodb_lock_wait_timeout = 120 
bulk_insert_buffer_size = 8M
myisam_max_sort_file_size = 10G
myisam_repair_threads = 1
interactive_timeout = 28800
wait_timeout = 28800




[mysqldump]
quick
max_allowed_packet = 16M 







[myisamchk]
key_buffer_size = 8M
sort_buffer_size = 8M
read_buffer = 4M
write_buffer = 4M 
